platform :ios, '8.0'  # 指定平台与版本
inhibit_all_warnings!  # 全局禁止显示警告

target 'ProjectFile' do # Pods for ProjectFile

    pod 'AFNetworking' #网络请求
    pod 'MBProgressHUD' #提示信息
    pod 'MJRefresh' #刷新
    pod 'MJExtension' #字典数组一键转模型
    pod 'SDWebImage'    #图片处理
    pod 'ImagePlayerView' #轮播图效果
    pod 'CorePlot' #绘图使用
    pod 'MWPhotoBrowser' #支持本地和远程图片展示，使用起来也比较方便
    # http://www.cnblogs.com/lwme/p/ios-third-party-libraries.html 第三方集合
    pod 'UIActivityIndicator-for-SDWebImage' #为SDWebImage显示加载效果
    pod 'MMDrawerController' #侧滑栏
    pod 'TMQuiltView' #瀑布流
    pod 'IQKeyboardManager' #自动处理键盘事件
    pod 'JKCategories'

    pod 'CocoaLumberjack' #日志收集
    pod 'CollapseClick' #可折叠列表
    pod 'CXAlertView' #弹出框
    pod 'Harpy' #检查软件更新
    pod 'Masonry' #约束
    pod 'MYBlurIntroductionView' #介绍页
    #pod 'JPullDownMenu', '~> 0.2.1'  #下拉菜单
    pod 'RDVTabBarController' #主体框架tabbar
    pod 'ReactiveObjC' #链式编程
    pod 'SDCycleScrollView' #简单易用的图片无限轮播器
    pod 'STAlertView' #类似于系统的sheet
    pod 'VTMagic' #类似网易的菜单分页组件
    pod 'WebViewJavascriptBridge' #交互webview
    #pod 'ZKSegment', '1.0.3' #一个分段选择控件
    pod 'YYKit'


end



